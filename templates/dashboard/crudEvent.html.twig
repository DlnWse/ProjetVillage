{% extends "crudTemplate.html.twig" %}
{% block body %}

{% block content %}
<div class="container">
    <h2>Ev√©nements</h2>
    <table class="table table-stripped">
        <thead>
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Contenu</th>
                <th scope="col">Image</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for event in event %}
            <tr>
                <td>{{event.title}}</td>
                <td>{{event.content | raw }}</td>
                <td>{{event.image | raw}}</td>
                <td> <a href="{{ path('eventShow', {'id': event.id}) }}" class="btn btn-primary">Afficher</a>
                    <a href="{{ path('editEvent', {'id': event.id}) }}" class="btn btn-warning">Modifier</a>
                    <a href="{{ path('deleteEvent', {'id': event.id}) }}" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}








{% endblock %}